@{
    var selected = ViewData["selected"]?.ToString() ?? "";
    ViewData["Brand"] = "بالدی بال";
}
<div class="main-menu menu-fixed menu-light menu-accordion menu-shadow" data-scroll-to-active="true">
    <div class="navbar-header">
        <ul class="nav navbar-nav flex-row">
            <li class="nav-item mr-auto">
                <a class="navbar-brand" href="/">
                    <div class="brand-logo"><img class="logo" src="/images/logo.png"></div>
                    <h2 class="brand-text mb-0">@ViewData["Brand"]</h2>
                </a>
            </li>
            <li class="nav-item nav-toggle"><a class="nav-link modern-nav-toggle pr-0" data-toggle="collapse"><i class="bx bx-x d-block d-xl-none font-medium-4 primary"></i><i class="toggle-icon bx bx-disc font-medium-4 d-none d-xl-block primary" data-ticon="bx-disc"></i></a></li>
        </ul>
    </div>
    <div class="shadow-bottom"></div>
    <div class="main-menu-content">
        <ul class="navigation navigation-main" id="main-menu-navigation" data-menu="menu-navigation" data-icon-style="lines">
            <li class="nav-item @(selected=="index"?"active":null)">
                <a href="/admin">
                    <i class="menu-livicon" data-icon="desktop"></i>
                    <span class="menu-title" data-i18n="File Manager">داشبورد</span>
                </a>
            </li>

            <li class="nav-item ">
                <a href="javascript:void(0)">
                    <i class="menu-livicon" data-icon="Dashboard"></i>
                    <span class="menu-title" data-i18n="Dashboard">مدیریت محصولات</span>
                </a>
                <ul class="menu-content">
                    <li class="@(selected=="products_product"?"active":null)">
                        <a href="/admin/products">
                            <i class="bx bx-left-arrow-alt"></i>
                            <span class="menu-item" data-i18n="Products">محصولات</span>
                        </a>
                    </li>
                    <li class="@(selected=="products_categories"?"active":null)">
                        <a href="/admin/categories">
                            <i class="bx bx-left-arrow-alt"></i>
                            <span class="menu-item" data-i18n="Categories">دسته بندی ها</span>
                        </a>
                    </li>
                </ul>
            </li>
            <li class="nav-item ">
                <a href="javascript:void(0)">
                    <i class="menu-livicon" data-icon="Users"></i>
                    <span class="menu-title" data-i18n="Users">مدیریت کاربران</span>
                </a>
                <ul class="menu-content">
                    <li class="@(selected=="users"?"active":null)">
                        <a href="/admin/users">
                            <i class="bx bx-left-arrow-alt"></i>
                            <span class="menu-item" data-i18n="UsersList">لیست کاربران</span>
                        </a>
                    </li>
                    <li class="@(selected=="roles"?"active":null)">
                        <a href="/admin/roles">
                            <i class="bx bx-left-arrow-alt"></i>
                            <span class="menu-item" data-i18n="RolesList">نقش ها</span>
                        </a>
                    </li>
                </ul>
            </li>
            <li class="nav-item @(selected=="PageSettings"?"active":null)">
                <a href="/admin/pagesettings">
                    <i class="menu-livicon" data-icon="adjust"></i>
                    <span class="menu-title" data-i18n="PageSettings">تنظیمات صفحه منو</span>
                </a>
            </li>
        </ul>
    </div>
</div>
