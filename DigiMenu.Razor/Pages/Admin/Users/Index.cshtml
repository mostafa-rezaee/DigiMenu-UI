@page
@using DigiMenu.Razor.Infrastructure
@model DigiMenu.Razor.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "مدیرت کاربران";
    ViewData["selected"] = "users";
}

<h3>@ViewData["title"]</h3>
<a asp-page="Add" class="btn btn-success mb-2">افزودن کاربر</a>
<div class="table-responsive card card-body p-0">
    <table class="table table-bordered mb-0">
        <thead>
            <tr>
                <th>آواتار</th>
                <th>شناسه</th>
                <th>نام</th>
                <th>نام خانوادگی</th>
                <th>نام کاربری</th>
                <th>فعال باشد؟</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users.Data)
            {
                <tr>
                    <td><img style="max-width:100px" src="@ServerSettings.ServerPath/images/users/avatars/@item.AvatarName" /></td>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Username</td>
                    <td><input type="checkbox" class="form-check" onclick="return false;" @(item.IsActive ? "checked='checked'" : "") /></td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-page="Edit" asp-route-id="@item.Id">ویرایش</a>
                        <a asp-page="Roles/Index" asp-route-productId="@item.Id" class="btn btn-warning btn-sm">نقش های کابر</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>


