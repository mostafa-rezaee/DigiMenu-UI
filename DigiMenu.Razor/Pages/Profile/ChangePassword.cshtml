@page
@model DigiMenu.Razor.Pages.Profile.ChangePasswordModel
@{
    ViewData["Title"] = "تغییر کلمه عبور";
    Layout = "Layouts/_MainLayout";
}
@section Styles {
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/lib/font-awesome/css/font-awesome.min.css">
}

<div class="row m-container mb-5">
    <partial name="Shared/Profile/_ProfileSideBar" />
    <div class="col-lg-9 col-md-8 shadow-around">
        <div class="row mb-4">
            <div class="col-lg-12 mb-lg-0 mb-3">
                <div class="section-title mb-2">
                    @ViewData["Title"]
                </div>
                <section class="shadow-around p-3">
                    <form method="post">
                        <div class="row">
                            <div class="col-lg-12 mb-4">
                                <div class="text-sm text-muted">@Html.DisplayNameFor(x=> x.CurrentPassword):</div>
                                <div class="form-element-row mb-0">
                                    <input type="password" class="input-element" asp-for="CurrentPassword" />
                                    <span asp-validation-for="CurrentPassword" class="val-msg"></span>
                                </div>
                                
                            </div>
                            <div class="col-lg-6 mb-4">
                                <div class="text-sm text-muted">@Html.DisplayNameFor(x => x.Password):</div>
                                <div class="form-element-row mb-0">
                                    <input type="password" class="input-element" asp-for="Password" />
                                    <span asp-validation-for="Password" class="val-msg"></span>
                                </div>
                                
                            </div>
                            <div class="col-lg-6 mb-4">
                                <div class="text-sm text-muted">@Html.DisplayNameFor(x => x.ConfirmPassword):</div>
                                <div class="form-element-row mb-0">
                                    <input type="password" class="input-element" asp-for="ConfirmPassword" />
                                    <span asp-validation-for="ConfirmPassword" class="val-msg"></span>
                                </div>
                                
                            </div>
                            <div class="col-12">
                                <div class="form-element-row text-center">
                                    <button class="btn-element btn-success-element">
                                        <i class="fa fa-floppy-o"></i>
                                        ثبت
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

